generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

model User {
  id String @id @default(uuid())
  name String?
  email String @unique
  emailVerified DateTime?
  password String?
  image String?
  role Role @default(USER)
  gender String?
  username String?
  phone String?
  dob DateTime?
  country String?
  age Int?
  isProfileComplete Boolean @default(false)
  status UserStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  wallet Wallet?
  responses UserResponse[]
  registration Registration[]
}

model Account {
  id String @id @default(uuid())
  userId String
  type String
  provider String
  providerAccountId String
  refresh_token String? @db.Text
  access_token String? @db.Text
  expires_at Int?
  token_type String?
  scope String?
  id_token String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Wallet {
  id String @id @default(uuid())
  userId String @unique
  balance Int @default(0)
  user User @relation(fields: [userId], references: [id],onDelete: Cascade)
  transactions TransactionHistory[] 
  tokenLogs TokenHistory[] 
}

enum PLAN_STATUS {
  DRAFT
  ACTIVATED
  DEACTIVATED
}

model Plan{
  id String @id @default(uuid())
  title String
  description String
  tokens Int
  price Int
  status PLAN_STATUS @default(DRAFT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TRANSACTION_STATUS{
PENDING
DONE
CANCELLED
}
enum PAYMENT_TYPE{
  CREDIT
  DEBIT
}
model TransactionHistory {
  id String @id @default(uuid())
  walletId String
  paymentId String
  amount Float
  tokens Int
  status TRANSACTION_STATUS @default(PENDING)
  createdAt DateTime @default(now())
  type PAYMENT_TYPE @default(CREDIT)
  wallet Wallet @relation(fields: [walletId], references: [id])
}

enum TokenHistoryType {
  DEPOSIT
  ENTRY_FEE
  WINNINGS
}

model TokenHistory {
  id String @id @default(uuid())
  walletId String
  amount Int
  type String
  description String?
  createdAt DateTime @default(now())

  wallet Wallet @relation(fields: [walletId], references: [id])
}
model Category {
  id            String        @id @default(uuid())
  name          String        @unique
  createdAt     DateTime      @default(now())
  image String?
  tournaments   Tournament[]
  subCategories SubCategory[]
}

model SubCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  createdAt   DateTime @default(now())

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  tournaments Tournament[]
}
// enum TournamentStatus {
//   DRAFT
//   PUBLISHED 
//   LIVE
//   COMPLETED 
// }

enum Difficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}

model Tournament {
  id String @id @default(uuid())
  title String
  description String?
  categoryId String
  startTime DateTime
  windowOpenTime DateTime
  endTime DateTime
  durationPerQ Int
  totalQuestions Int
  difficulty Difficulty
  // status TournamentStatus @default(DRAFT)
  totalSeats Int
  winningSeats Int
  entryFee Float
  prizePool Float
  language String @default("ENGLISH")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subCategoryId String
  category Category @relation(fields: [categoryId], references: [id],onDelete: Cascade)
  subCategory SubCategory @relation(fields: [subCategoryId],references: [id],onDelete: Cascade)
  questions Question[]
  leaderboardCalculated Boolean @default(false)
  registration Registration[]
  bots Bots[]
}

model Question {
  id String @id @default(uuid())
  tournamentId String
  text String

  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  
  options Option[]
  responses UserResponse[]
}

model Option {
  id String @id @default(uuid())
  questionId String
  text String
  isCorrect Boolean @default(false)
  
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  responses UserResponse[]
}

model UserResponse {
  id String @id @default(uuid())
  userId String
  questionId String
  optionId String
  isCorrect Boolean
  timeTaken Float
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  option Option @relation(fields: [optionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questionId])
}
enum REGISTRATION_STATUS{
  NOT_PLAYED
  PLAYED
}

model Registration {
  id String @id @default(uuid())
  userId String
  tournamentId String
  score Int @default(0)  
  totalTime Float @default(0)
  prize Int @default(0)
  rank Int?
  hasPaid Boolean @default(false)  
  createdAt DateTime @default(now())   
  status REGISTRATION_STATUS @default(NOT_PLAYED)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@unique([userId, tournamentId])
}

model Bots {
  id String @id @default(uuid())
  tournamentId String
  name String
  score Int
  timeTaken Float
  rank Int
  
  tournament Tournament @relation(fields: [tournamentId], references: [id])
}

model Otp {
  id String @id @default(uuid())
  email String @unique
  code String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model LogTraffic{
  id String @id @default(uuid())
  date DateTime @unique
  views Int @default(2)
}